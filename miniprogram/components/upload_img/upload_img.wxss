/* components/upload_img.wxss */
.top_view{
  position: relative;
  width: 100%;
  height: auto;
}
.tittle_view{
  display: flex;
  border-color: #584747 ;
  border-style: none none  solid none;
  border-width : 3rpx;
  width: 100%;
  height: auto;
}
.title_text{
  position: relative;
  text-align: left;  
  margin: 30rpx;
}
.img_count_text{
  position: relative;
  text-align: right; 
  margin: 30rpx;
  float: right;
}

.upload_img_view{
  display: flex;
  flex-wrap: wrap;
  position: relative;
  width: 100%;
  height: auto;
}

.ui_uploader_item_icon {
  position: absolute;
  right: 0rpx;
  top : 0rpx;
  z-index: 1;
}

.add_img_view{
  position: relative;
  width: 23%; 
  padding-top:  23%;
  margin: 1%;
}
.upload_image{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
}
