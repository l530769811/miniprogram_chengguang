.top_view {
  margin: 5px;
  text-align: center;
}

.title_text {
  text-align: center;
  text-decoration: underline;
  font-size: 40rpx;
}

.swiper-item {
  display: block;
  height: 150px;
  position: absolute;
  margin: 10px 0px 100px 0px;
}

.line_hr {
  background: #beb4b4;
  width: 100%;
  height: 5rpx;
  margin: 0px 10px 0px 10px;
}

.tool_view {
  background-color: #f00;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.button_view {
  background-color: #ff0;
  text-align: center;
  margin: 0px 5px 0px 5px;
}

.toolButton {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  display: block;
}

.button_text {
  display: block;
  color: #beb4b4;
   font-size: 30rpx;
}
