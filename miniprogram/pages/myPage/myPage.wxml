<view class='top_view'
style = "width: 100%; height: 100%;">
   <!-- 用户 openid -->
  <view class="userinfo" wx:if="{{!show_admin_view}}">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
      size="default"
    ></button>
    <view class="userinfo-nickname-wrapper">
      <text class="userinfo-nickname" >{{nickName_show}}</text>
    </view>
    <button class="show_admin_button button_font" wx:if="{{is_logined}}" style="width: 30%;" bindtap="onShowAdminVerifyView" >管理员验证</button>
  </view>
  <view class="userinfo" wx:if="{{show_admin_view}}">
    <input class="admin_possword_input" maxlength='12' placeholder="管理员密码" password type="text" bindinput="password_input">  </input>
    <button class="_admin_button button_font" style="width: 20%;" bindtap="onVerify">验证</button>
    <button class="_admin_button button_font" style="width: 20%;" bindtap="onShowInfoView">返回</button>
  </view>
</view>